
<%= form_with(model: message, data: { reflex: "submit->TextMessageReflex#submit" }, local: true) do |form| %>
    <% if message.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(message.errors.count, "error") %> prohibited this list from being saved:</h2>

        <ul>
            <% message.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

  <div id="text-message-validation-message"></div>
  
  <div class="field">
    <%= form.label :content, class: 'col-form-label col-form-label-lg' %>
    <%= form.text_field :content, class: 'form-control' %>
  </div>

  <%= form.hidden_field :list_id, value: list_id %>

<div class="actions mt-4">
    <%= form.submit class: "btn btn-primary" %>
</div>

<% end %>